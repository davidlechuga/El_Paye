---
import '@fontsource-variable/jost'
import Header from '../components/Header.astro';
import SmokeBrackground from '@/components/SmokeBrackground.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Paye" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class=" flex h-full w-full" >
		<SmokeBrackground/>
		<div class="max-w-6xl px-10 pt-20 mx-auto">
			<Header/>
			<slot/>
		</div>
	</body>
</html>
<style is:global>
	html {
		font-family: "Jost-Variable",system-ui, sans-serif;
		background: #922927;
	}
	
</style>
